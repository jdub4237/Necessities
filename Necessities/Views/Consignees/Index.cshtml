@model System.Collections.Generic.IEnumerable<Necessities.Models.ConsigneeModel>

@{
    ViewBag.Title = "Consignees";
}

<h2>Consignees</h2>
<table style="width: 600px">
    <thead>
        <tr>
            <th>Consignee</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var m in Model)
    {
        <tr>
            <td>
                <div style="border: 1px solid silver"></div>
                <table>
                    <tr>
                        <td>
                            <table>
                                <tr>
                                    <td>@m.FirstName&nbsp;@m.LastName<br />@m.AddressOne<br />@m.AddressTwo<br/>@m.City, @m.State&nbsp;&nbsp;@m.PostalCode</td>
                                </tr>
                            </table>
                        </td>
                        <td>
                            <table>
                                <tr>
                                    <td>Phone</td>
                                    <td>@m.PhoneNumber</td>
                                </tr>
                                <tr>
                                    <td>Email</td>
                                    <td><a href="mailto:@m.Email">@m.Email</a></td>
                                </tr>
                                <tr>
                                    <td>Percentage</td>
                                    <td>@m.Percentage.ToString("#0%")</td>
                                </tr>
                                <tr>
                                    <td>Created</td>
                                    <td>@m.CreationDate.ToShortDateString()</td>
                                </tr>
                                <tr>
                                    <td>Updated</td>
                                    <td>@m.UpdatedDate.ToShortDateString()</td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
            <td>@Html.ActionLink("Edit", "Edit", new { consigneeId = m.ConsigneeId })</td>
        </tr>   
    }
</table>
@Html.ActionLink("Add new...", "Create")